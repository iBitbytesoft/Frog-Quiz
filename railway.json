{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
  "startCommand": "sh -lc \"python -m uvicorn main:app --host 0.0.0.0 --port ${PORT:-8080} --http h11 --timeout-keep-alive 5 --timeout-graceful-shutdown 10\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
